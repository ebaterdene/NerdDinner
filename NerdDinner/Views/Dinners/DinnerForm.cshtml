@model NerdDinner.Controllers.DinnerFormViewModel

@Html.ValidationSummary("Please correct the errors and try again.")

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <legend></legend>
    <fieldset>
        @Html.HiddenFor(model => model.DinnerID)

        <p>
            @Html.LabelFor(model => model.Title)
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </p>

        <p>
            @Html.LabelFor(model => model.EventDate)
            @Html.EditorFor(model => model.EventDate)
            @Html.ValidationMessageFor(model => model.EventDate)
        </p>

        <p>
            
            @Html.LabelFor(model => model.Address)
            @Html.EditorFor(model => model.Address)
            @Html.ValidationMessageFor(model => model.Address, "*")
        </p>
        

        <p>
            @Html.LabelFor(model => model.HostedBy)
            @Html.EditorFor(model => model.HostedBy)
            @Html.ValidationMessageFor(model => model.HostedBy, "*")
        </p>
        <p>
            
            @Html.LabelFor(model => model.Description)
            @Html.TextAreaFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </p>
        <p>
            @Html.LabelFor(model => model.ContactPhone)
            @Html.EditorFor(model => model.ContactPhone)
            @Html.ValidationMessageFor(model => model.ContactPhone)
        </p>
        
        <p>
            @Html.LabelFor(model => model.Country)
            @Html.EditorFor(model => model.Country)
            @*  
                @Html.DropDownListFor(model => model.Country, Model.Country)
                Err: populate countries in a combobox.
            
            *@
            @Html.ValidationMessageFor(model => model.Country)
        </p>
        
        <p>
            @Html.LabelFor(model => model.Latitude)
            @Html.EditorFor(model => model.Latitude)
            @Html.ValidationMessageFor(model => model.Latitude)
        </p>
        
        <p>
            @Html.LabelFor(model => model.Longtitude)
            @Html.EditorFor(model => model.Longtitude)
            @Html.ValidationMessageFor(model => model.Longtitude)
        </p>

        
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
    
    
}